{
  "name": "extreme-startup-bun",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:server": "bun --hot run src/index.tsx",
    "dev:tailwind": "tailwindcss -i ./src/tailwind.css -o ./public/tailwind.css --watch",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:tailwind\"",
    "build:tailwind": "tailwindcss -i ./src/tailwind.css -o ./public/tailwind.css",
    "build:server": "bun build --target=bun ./src/index.tsx --outfile=dist/index.js",
    "build": "bun run --target=bun build:server && npm run build:tailwind"
  },
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/html": "^0.8.0",
    "@elysiajs/static": "^0.8.1",
    "@kitajs/ts-html-plugin": "^1.3.4",
    "elysia": "^0.8.17",
    "elysia-htmx": "1.0.9",
    "htmx.org": "^1.9.10"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "daisyui": "^4.7.3",
    "tailwindcss": "^3.4.1"
  },
  "module": "src/index.js"
}